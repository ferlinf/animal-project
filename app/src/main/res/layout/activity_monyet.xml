<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/dun"

    tools:context=".MonyetActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/chamoise"
        android:paddingTop="10dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp">

                <ImageView
                    android:id="@+id/arrowBackImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/baseline_arrow_back_24" />

            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <ImageView
        android:id="@+id/monyet"
        android:layout_width="200dp"
        android:layout_height="500dp"
        android:layout_marginLeft="100dp"
        app:srcCompat="@drawable/monyet" />

    <TextView
        android:id="@+id/monyetpage3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/monyet"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="-118dp"
        android:text="Monyet"
        android:textColor="@color/black"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/monyetdesk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="30dp"
        android:text="Monyet itu hewan lucu dengan ekor panjang dan tubuh yang lincah. Mereka suka bermain-main dan melompat-lompat dari satu pohon ke pohon lainnya. Monyet juga suka makan pisang dan buah-buahan lainnya. Mereka punya wajah yang ceria dan kadang-kadang suka berbuat kocak. Jadi, monyet itu seperti teman main yang selalu ceria dan penuh dengan kejutan!"
        android:lineSpacingMultiplier="1.5"
        android:textColor="@color/black"
        android:layout_below="@id/monyetpage3"/>


    <Button
        android:id="@+id/ytmonyet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pelajari lebih lanjut!"
        android:backgroundTint="@color/chamoise"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@id/monyetdesk"
        android:onClick="videoMonyet"/>


</RelativeLayout>