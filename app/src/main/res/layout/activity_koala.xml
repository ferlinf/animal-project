<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/Linen"

    tools:context=".KoalaActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/battleshipgray"
        android:paddingTop="10dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp">

                <ImageView
                    android:id="@+id/arrowBackImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/baseline_arrow_back_24" />

            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <ImageView
        android:id="@+id/koala"
        android:layout_width="200dp"
        android:layout_height="500dp"
        android:layout_marginLeft="100dp"
        app:srcCompat="@drawable/koala" />

    <TextView
        android:id="@+id/koalapage3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/koala"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="-118dp"
        android:text="Koala"
        android:textColor="@color/black"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/koaladesk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="30dp"
        android:text="Koala itu seperti beruang kecil dengan mata besar dan hidung hitam lucu-lucu. Dia tinggal di Australia dan suka sekali tidur di pohon eukaliptus. Koala makan daun-daunan dari pohon itu, itulah makanan favoritnya! Dia juga punya ekor yang pendek dan lembut. Koala terkenal karena kelihaiannya memanjat pohon dengan cakarnya yang kuat. Jadi, koala itu seperti teman berbulu yang suka tidur dan makan daun hijau!"
        android:lineSpacingMultiplier="1.5"
        android:textColor="@color/black"
        android:layout_below="@id/koalapage3"/>


    <Button
        android:id="@+id/ytkoala"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pelajari lebih lanjut!"
        android:backgroundTint="@color/battleshipgray"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@id/koaladesk"
        android:onClick="videoKoala"/>


</RelativeLayout>